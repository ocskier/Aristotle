<h4 class="center">Lessons</h4>
<div id = "lessons-row" class="row carousel valign-wrapper">
   {{#each lessons}}
    <a class="carousel-item" data-planid={{id}} style="width:240px;overflow:hidden">
        <div class="card blue-grey darken-1" style="min-height: 235px">
            <div class="card-content white-text">
                <span class="card-title">{{title}}</span>
                <p>{{description}}</p>
            </div>
        </div>
    </a>
  {{/each}}
  <div id="modal1" class="modal">
      <div id="matchCard" class="modal-content" data-planid="" style="width:85%;margin:0 auto">
